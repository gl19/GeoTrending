<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/trendValue"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/trendValue"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trendNumber" />

        <TextView
            android:id="@+id/trendHype"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@+id/trendValue" />

        <TextView
            android:id="@+id/trendNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trendNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/trendValue"
            tools:layout_editor_absoluteX="-5dp" />

        <Button
            android:id="@+id/browsebut"
            android:layout_width="437dp"
            android:layout_height="29dp"
            android:layout_marginStart="184dp"
            android:layout_marginLeft="184dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:alpha="0.25"
            android:background="@android:color/white"
            android:text="more"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/trendHype"
            app:layout_constraintStart_toEndOf="@+id/trendValue"
            app:layout_constraintStart_toStartOf="@+id/trendValue"
            app:layout_constraintTop_toBottomOf="@+id/trendNumber" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>